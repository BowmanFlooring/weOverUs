{
    // editor settings
    "css.validate": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.codeLens": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 14,
    "editor.hideCursorInOverviewRuler": false,
    "editor.find.cursorMoveOnType": true,
    "git-graph.graph.style": "angular",
    "editor.fontFamily": "'VictorMono Nerd Font', 'VictorMono Nerd Font Italic'",
    "editor.fontSize": 8,
    "editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.highlightActiveIndentGuide": true,
    "editor.hover.enabled": true,
    "editor.hover.delay": 10,
    "editor.lightbulb.enabled": true,
    "editor.lineHeight": 1.3,
    "editor.lineNumbers": "on",
    "editor.parameterHints.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.parameterNames.enabled": "all",
    "javascript.inlayHints.parameterTypes.enabled": true,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
    "javascript.inlayHints.variableTypes.enabled": true,
    "javascript.referencesCodeLens.showOnAllFunctions": true,
    "editor.inlayHints.fontSize": 8,
    "editor.inlayHints.fontFamily": "agave Nerd Font Mono",
    "editor.suggest.showColors": true,
    "editor.renderLineHighlight": "all",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.scrollbar.horizontalScrollbarSize": 20,
    // Class Completion
    "html-css-class-completion.JavaScriptLanguages": [
        "javascript",
        "javascriptreact",
        "typescriptreact",
        "css"
    ],
    "files.enableTrash": true,
    "java.home": "/usr/local/opt/openjdk/bin/java",
    "java.completion.filteredTypes": [
        "java.awt.*",
        "com.sun.*",
        "sun.*"
    ],
    // Java/Javascript Basic Configs
    "java.semanticHighlighting.enabled": true,
    "javascript.inlayHints.enumMemberValues.enabled": true,
    // Language Settings    
    //    JavaScript        
    "[javascript]": {
        "editor.acceptSuggestionOnEnter": "off",
        "editor.formatOnSave": true,
        "editor.hover.delay": 300,
        "editor.hover.enabled": true,
        "editor.inlineSuggest.enabled": true,
        "editor.inlayHints.enabled": true,
        "editor.inlayHints.fontFamily": "Cousine Nerd Font",
        "editor.parameterHints.cycle": true,
        "editor.suggest.showTypeParameters": true,
        "outline.showTypeParameters": true,
        "editor.parameterHints.enabled": true,
        "editor.quickSuggestionsDelay": 30,
        "editor.snippetSuggestions": "bottom",
        "editor.suggest.filterGraceful": true,
        "editor.suggest.showSnippets": true,
        "editor.inlayHints.fontSize": 20,
        "editor.codeLensFontSize": 20,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.tabSize": 2,
    },
    //    JSON
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true,
            "comments": true
        },
        "editor.suggest.insertMode": "replace",
        "workbench.editor.untitled.experimentalLanguageDetection": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        }
    },
    //    Pug
    "[pug]": {
        "editor.defaultFormatter": "alexbabichev.formatter-pug",
        "editor.hover.enabled": true,
        "editor.suggest.filterGraceful": true,
        "editor.inlayHints.enabled": true,
        "editor.parameterHints.enabled": true,
        "editor.formatOnSave": true
    },
    //    CSS
    "[css]": {
        "editor.defaultFormatter": "lonefy.vscode-JS-CSS-HTML-formatter",
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        },
    },
    // Terminal Settings
    "terminal.integrated.drawBoldTextInBrightColors": true,
    /**/
    // terminal font family (MacBook Pro - Late 2019 {macOS 11.4 BETA})
    "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
    /**/
    /*
    terminal font family (Mac Mini - Late 2014 {macOS 12.x BETA})
    "terminal.integrated.fontFamily": "Space Mono",
    */
    "terminal.integrated.fontWeight": "100",
    "terminal.integrated.fontWeightBold": "900",
    "terminal.integrated.fontSize": 16,
    "vsicons.presets.jsonOfficial": true,
    // VSIntellicode Settings
    "vsintellicode.java.completionsEnabled": true,
    "vsintellicode.typescript.completionsEnabled": true,
    // Window Settings
    "window.titleSeparator": " |ðŸ‘½  | ",
    "window.title": "${remoteName}${separator}${activeFolderLong}",
    "window.zoomLevel": 2
